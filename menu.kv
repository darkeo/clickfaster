<MenuWidget>:
    canvas.before:
        Color
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size


    Label:
        font_size : dp(50)
        font_name: 'fonts/upheavtt.ttf'
        text: root.parent.menu_title
        pos_hint: { "center_x": .5, "center_y": .6 }
    Button:
        font_size : dp(30)
        font_name: 'fonts/upheavtt.ttf'
        text: root.parent.menu_button_title_easy
        pos_hint: { "center_x": .2, "center_y": .3 }
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_easy_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size : dp(30)
        font_name: 'fonts/upheavtt.ttf'
        text: root.parent.menu_button_title_medium
        pos_hint: { "center_x": .5, "center_y": .3 }
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_medium_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size : dp(30)
        font_name: 'fonts/upheavtt.ttf'
        text: root.parent.menu_button_title_hard
        pos_hint: { "center_x": .8, "center_y": .3 }
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_hard_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .85